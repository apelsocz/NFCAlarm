<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentContent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_alarm"
        android:layout_margin="16dp"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/icon_nfc"
                    android:src="@drawable/icon_nfc"
                    android:layout_marginStart="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="72dp"
                    android:text="Use Alarm"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="4dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="72dp"
                    android:text="Allow scheduled alarm to override phone's NFC settings"
                    android:layout_marginRight="56dp"
                    android:layout_alignParentBottom="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginBottom="4dp"
                    android:lines="2"
                    />
                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_enabled"
                    android:minWidth="52dp"
                    android:minHeight="72dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/accentColor"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"

                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/icon_alarm"
                    android:src="@drawable/icon_alarm"
                    android:layout_marginStart="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/alarm_time"
                    android:paddingStart="72dp"
                    android:text=""
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_marginTop="4dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/alarm_meridiem"
                    android:text=""
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_toRightOf="@id/alarm_time"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/alarm_message"
                    android:paddingStart="72dp"
                    android:singleLine="true"
                    android:text=""
                    android:layout_alignParentBottom="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginBottom="4dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_time"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="72dp"
                    android:background="@color/accentColor"
                    android:layout_centerVertical="true"
                    android:text="Set"
                    android:minHeight="36dp"
                    android:minWidth="36dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#FFF"
                    android:layout_alignParentEnd="true"
                    >
                </Button>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/accentColor"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="bottom">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/icon_repeat"
                    android:src="@drawable/icon_event"
                    android:layout_marginStart="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/alarm_repeat"
                    android:paddingStart="72dp"
                    android:text="Repeat"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="4dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/alarm_schedule"
                    android:paddingStart="72dp"
                    android:text="Daily"
                    android:singleLine="true"
                    android:layout_alignParentBottom="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginBottom="4dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_schedule"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="72dp"
                    android:background="@color/accentColor"
                    android:layout_centerVertical="true"
                    android:text="Schedule"
                    android:minHeight="36dp"
                    android:minWidth="36dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#FFF"
                    android:layout_alignParentEnd="true"
                    >
                </Button>
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>